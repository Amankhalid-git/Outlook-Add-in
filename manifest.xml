<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
    xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
    xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
    xsi:type="MailApp">

    <Id>your-unique-id-here</Id>
    <Version>1.0.0.0</Version>
    <ProviderName>Your Company</ProviderName>
    <DefaultLocale>en-US</DefaultLocale>
    <DisplayName>Email Signature Add-in</DisplayName>
    <Description>Automatically insert your email signature when composing emails</Description>

    <IconUrl DefaultValue="assets/icon.png"/>
    
    <Hosts>
        <Host Name="Mailbox"/>
    </Hosts>

    <Requirements>
        <Sets DefaultMinVersion="1.1">
            <Set Name="Mailbox"/>
        </Sets>
    </Requirements>

    <FormSettings>
        <Form xsi:type="ItemRead">
            <DesktopSettings>
                <SourceLocation DefaultValue="https://yourwebsite.com/index.html"/>
            </DesktopSettings>
        </Form>
        <Form xsi:type="ItemEdit">
            <DesktopSettings>
                <SourceLocation DefaultValue="https://yourwebsite.com/index.html"/>
            </DesktopSettings>
        </Form>
    </FormSettings>

    <Permissions>ReadWriteItem</Permissions>

    <Rule xsi:type="RuleCollection" Mode="Or">
        <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
    </Rule>

    <VersionOverrides Version="1.0">
        <Hosts>
            <Host xsi:type="MailHost">
                <DesktopFormFactor>
                    <FunctionFile resid="functionFile"/>
                    <ExtensionPoint xsi:type="MessageComposeCommandSurface">
                        <OfficeTab id="TabDefault">
                            <Group id="msgComposeGroup">
                                <Label resid="groupLabel"/>
                                <Control xsi:type="Button" id="insertSignatureButton">
                                    <Label resid="insertSignatureLabel"/>
                                    <Supertip>
                                        <Title resid="insertSignatureTitle"/>
                                        <Description resid="insertSignatureDesc"/>
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="icon16"/>
                                        <bt:Image size="32" resid="icon32"/>
                                        <bt:Image size="80" resid="icon80"/>
                                    </Icon>
                                    <Action xsi:type="ShowTaskpane">
                                        <SourceLocation resid="taskPaneUrl"/>
                                    </Action>
                                </Control>
                            </Group>
                        </OfficeTab>
                    </ExtensionPoint>
                </DesktopFormFactor>
            </Host>
        </Hosts>
        <Resources>
            <bt:Images>
                <bt:Image id="icon16" DefaultValue="assets/icon-16.png"/>
                <bt:Image id="icon32" DefaultValue="assets/icon-32.png"/>
                <bt:Image id="icon80" DefaultValue="assets/icon-80.png"/>
            </bt:Images>
            <bt:Urls>
                <bt:Url id="taskPaneUrl" DefaultValue="https://yourwebsite.com/index.html"/>
            </bt:Urls>
            <bt:ShortStrings>
                <bt:String id="insertSignatureLabel" DefaultValue="Insert Signature"/>
                <bt:String id="groupLabel" DefaultValue="Signature Tools"/>
            </bt:ShortStrings>
            <bt:LongStrings>
                <bt:String id="insertSignatureTitle" DefaultValue="Insert Email Signature"/>
                <bt:String id="insertSignatureDesc" DefaultValue="Automatically insert a signature into your email body."/>
            </bt:LongStrings>
        </Resources>
    </VersionOverrides>
</OfficeApp>
